<div class="w-full mb-8">
  <div class="mb-6">
    <h1 class="font-bold text-4xl">All Units</h1>
    <p>Displaying all units in your authorized scope</p>    
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
    <% @units.each do |unit| %>
      <div class="bg-blue-100 shadow-md rounded-lg p-4 border border-blue-200 w-full max-w-xs mx-auto">
        <h1 class="text-xl font-semibold mb-2"><%= link_to unit.unit_number, unit_path(unit), class: "text-blue-600 hover:text-blue-800" %></h1>
        <div class="text-sm text-gray-600 space-y-1">
          <p><span class="font-medium">Floor:</span> <%= unit.floor %></p>
          <p><span class="font-medium">Condo:</span> <%= unit.condo.name if unit.condo %></p>
          <p><span class="font-medium">Owner:</span> <%= unit.house_owner.first_name if unit.house_owner %> <%= unit.house_owner.last_name if unit.house_owner %></p>
        </div>
        <div class="mt-3 pt-3 border-t border-blue-200">
           <%= form_with url: unit_path(unit), method: :delete, local: true, class: "inline" do |f| %>
             <%= f.submit 'Delete', class: "text-red-600 hover:text-red-800 cursor-pointer text-sm transition-colors", data: { confirm: "Are you sure you want to delete this unit?" } %>
           <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-6">
    <%= link_to "New Unit", new_unit_path, class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors inline-block" %>
  </div>
</div>
