<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md border border-gray-200">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Edit Unit information</h2>
    <%= form_with model: @unit, local: true, html: { class: "space-y-6" } do |f| %>
      <%# <%= render 'shared/error_messages', object: f.object %> %>

      <div>
        <%= f.label :unit_number, "Unit Number", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :unit_number, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :floor, "Floor", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :floor, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :condo_id, "Condo", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :condo_id, Condo.all, :id, :name, { prompt: "Select a Condo" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :size, "Size", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :size, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>


      <div>
        <%= f.submit "Lưu thay đổi", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
