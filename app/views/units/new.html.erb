<div class="min-h-screen flex items-center justify-center">
  <div class="justify-center items-center bg-white p-8 rounded-lg shadow-lg w-full max-w-md border border-gray-200">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Create a new Unit</h2>

    <%= form_with(model: @unit, local: true, html: { class: "space-y-6" }) do |f| %>
      <% if @unit.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                It's <%= pluralize(@unit.errors.count, "lá»—i") %> in form:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @unit.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.label :unit_number, "Unit Number", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :unit_number, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :floor, "Floor", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :floor, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :condo_id, "Condo", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :condo_id, Condo.all, :id, :name, { prompt: "Select a Condo" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :size, "Size", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :size, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

    <div>
      <%= f.label :house_owner_id, "House Owner", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :house_owner_id, User.all, :id, ->(u) { "#{u.first_name} #{u.last_name}" }, { prompt: "Select a House Owner" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>



      <div class="flex gap-4">
        <%= f.submit "Create Unit", class: "flex-1 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Cancel", units_path, class: "flex-1 flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>