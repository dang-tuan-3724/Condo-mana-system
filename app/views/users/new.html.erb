<div class="min-h-screen flex items-center justify-center">
  <div class="justify-center items-center bg-white p-8 rounded-lg shadow-lg w-full max-w-md border border-gray-200">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Tạo thành viên mới</h2>

    <%= form_with(model: @user, local: true, html: { class: "space-y-6" }) do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                Có <%= pluralize(@user.errors.count, "lỗi") %> cần khắc phục:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.label :first_name, "Tên", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      
      <div>
        <%= f.label :last_name, "Họ", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, autocomplete: "family-name", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :password, "Mật khẩu", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <p class="mt-1 text-sm text-gray-500">Mật khẩu tối thiểu 6 ký tự</p>
      </div>

      <div>
        <%= f.label :password_confirmation, "Xác nhận mật khẩu", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      
      <div>
        <%= f.label :condo_id, "Tòa nhà", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :condo_id, @condos, :id, :name, { prompt: "Chọn tòa nhà" }, { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
      </div>

      <div>
        <%= f.label :role, "Vai trò", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :role, 
            options_for_select([
              ["Super Admin", "super_admin"],
              ["Operation Admin", "operation_admin"],
              ["Chủ hộ", "house_owner"],
              ["Thành viên", "house_member"]
            ]), 
            { prompt: "Chọn vai trò" }, 
            { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
      </div>

      <div class="flex gap-4">
        <%= f.submit "Tạo thành viên", class: "flex-1 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Hủy", users_path, class: "flex-1 flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>