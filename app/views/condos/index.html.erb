<div class="w-full mb-8">
  <div class="mb-6">
    <h1 class="font-bold text-4xl">All Condos</h1>
    <p>Displaying all condos in your authorized scope</p>
  </div>
  <%= form_with url: condos_path, method: :get, local: true, class: "mb-6 border border-blue-500 rounded flex justify-between px-4 shadow-md w-full" do |f| %>
    <input type="text" name="search" value="<%= params[:search] %>" placeholder="Search for condo by name, address" style="width: 90%;" class="rounded px-2 py-1 bg-white focus:bg-white focus:outline-none focus:ring-0 " />
    <button type="submit" class=" " >
      <%= heroicon "magnifying-glass", options: { class: "w-4 h-4 inline-block mr-2 text-blue-600" } %>
      Search
    </button>
  <% end %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
    <% @condos.each do |condo| %>
      <div class="bg-blue-100 shadow-md rounded-lg p-4 border border-blue-200 w-full max-w-xs mx-auto">
        <h1 class="text-xl font-semibold mb-2"><%= link_to condo.name, condo_path(condo), class: "text-blue-600 hover:text-blue-800" %></h1>
        <div class="text-sm text-gray-600 space-y-1">
          <p><span class="font-medium">Address:</span> <%= condo.address %></p>
        </div>
        <div class="mt-3 pt-3 border-t border-blue-200">
           <%= form_with url: condo_path(condo), method: :delete, local: true, class: "inline" do |f| %>
             <%= f.submit 'Delete', class: "text-red-600 hover:text-red-800 cursor-pointer text-sm transition-colors", data: { confirm: "Are you sure you want to delete this condo?" } %>
           <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-6">
    <%= link_to "New Condo", new_condo_path, class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors inline-block" %>
  </div>
</div>
