<div>
  <h1 class="font-bold text-4xl mb-12"> All Facilities</h1>
  <div class="flex flex-wrap gap-4">
    <% @facilities.each do |facility| %>
      <div class="m-2 p-2 border border-green-200 rounded"><%= link_to facility.name, facility_path(facility) %></div>
    <% end %>
  </div>
  <%= link_to 'New Facility', new_facility_path, class: 'mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded' %>
</div>
