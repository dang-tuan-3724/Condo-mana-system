<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow space-y-4">
  <div class="text-center text-lg font-semibold text-indigo-700 mb-4">
    Tài khoản của bạn
  </div>
  <div class="flex flex-col space-y-3">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Đăng nhập", new_session_path(resource_name), class: "transition-colors duration-200 py-2 px-4 rounded-md bg-indigo-50 hover:bg-indigo-100 text-indigo-700 font-medium text-center" %>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Đăng ký", new_registration_path(resource_name), class: "transition-colors duration-200 py-2 px-4 rounded-md bg-green-50 hover:bg-green-100 text-green-700 font-medium text-center" %>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Quên mật khẩu?", new_password_path(resource_name), class: "transition-colors duration-200 py-2 px-4 rounded-md bg-yellow-50 hover:bg-yellow-100 text-yellow-700 font-medium text-center" %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Chưa nhận được email xác nhận?", new_confirmation_path(resource_name), class: "transition-colors duration-200 py-2 px-4 rounded-md bg-blue-50 hover:bg-blue-100 text-blue-700 font-medium text-center" %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Chưa nhận được hướng dẫn mở khóa?", new_unlock_path(resource_name), class: "transition-colors duration-200 py-2 px-4 rounded-md bg-red-50 hover:bg-red-100 text-red-700 font-medium text-center" %>
    <% end %>
  </div>
</div>