<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <%= link_to notifications_path, class: "inline-flex items-center text-gray-600 hover:text-gray-800 transition-colors" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        Back to notifications
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <div class="flex justify-between items-start mb-4">
        <div class="flex items-center space-x-3">
          <h1 class="text-2xl font-bold text-gray-900">Notification details</h1>
          <% if @notification.status == 'unread' %>
            <span class="inline-flex items-center ml-2 px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <i class="fas fa-circle mr-1 text-blue-600" style="font-size: 6px;"></i>
              Unread
            </span>
          <% else %>
            <span class="inline-flex items-center ml-2 px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
              <i class="fas fa-check mr-1"></i>
              Read
            </span>
          <% end %>
        </div>
      </div>

      <div class="border-l-4 border-blue-500 pl-4 mb-6">
        <p class="text-lg text-gray-800 leading-relaxed ml-2">
          <%= @notification.message %>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
        <div class="flex items-center gap-2">
          <i class="fas fa-tag mr-2 text-gray-400"></i>
          <span class="font-medium">Type:</span>
          <span class="ml-1 capitalize"><%= @notification.category %></span>
        </div>
        
        <div class="flex items-center gap-2">
          <i class="fas fa-clock mr-2 text-gray-400"></i>
          <span class="font-medium">Time:</span>
          <span class="ml-1"><%= @notification.created_at.strftime("%d/%m/%Y %H:%M") %></span>
        </div>

        <% if @notification.reference %>
          <div class="flex items-center gap-2">
            <i class="fas fa-link mr-2 text-gray-400"></i>
            <span class="font-medium">Related:</span>
            <span class="ml-1"><%= @notification.reference_type %></span>
          </div>
        <% end %>

        <div class="flex items-center gap-2">
          <i class="fas fa-eye mr-2 text-gray-400"></i>
          <span class="font-medium">Status: </span>
          <span class="ml-1 capitalize"><%= @notification.status == 'unread' ? 'Unread' : 'Read' %></span>
        </div>
      </div>

      <% if @notification.reference_type == 'Booking' && @notification.reference %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Related booking informations</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
              <div>
                <span class="font-medium">Facility:</span>
                <span class="ml-1"><%= @notification.reference.facility.name %></span>
              </div>
              <div>
                <span class="font-medium">Status:</span>
                <span class="ml-1 capitalize"><%= @notification.reference.status %></span>
              </div>
              <div>
                <span class="font-medium">Purpose:</span>
                <span class="ml-1"><%= @notification.reference.purpose %></span>
              </div>
            </div>
            <div class="mt-3">
              <%= link_to "View Booking Details", bookings_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors" %>
            </div>
          </div>
        </div>
      <% end %>
      <% if @notification.reference_type == 'UnitMemberRequest' && @notification.reference && @notification.reference.status == 'pending' %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Related request informations</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
              <div>
                <span class="font-medium">Status:</span>
                <span class="ml-1 capitalize"><%= @notification.reference.status %></span>
              </div>
            </div>
            <div class="mt-3">
              <%= link_to "View Request Details", root_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
