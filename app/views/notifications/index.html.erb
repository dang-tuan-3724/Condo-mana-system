<div class="container mx-auto px-4 py-8">
  <h1 class="font-bold text-3xl mb-6 text-gray-800">Notification</h1>
  
  <% if @notifications.any? %>
    <div class="space-y-3">
      <% @notifications.order(created_at: :desc).each do |notification| %>
        <div class="<%= notification.status == 'unread' ? 'bg-blue-50 border-blue-200' : 'bg-gray-50 border-gray-200' %> border rounded-lg p-4 transition-colors duration-200 hover:shadow-md">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <%= link_to notification, class: "block" do %>
                <h3 class="<%= notification.status == 'unread' ? 'font-semibold text-gray-900' : 'text-gray-600' %>">

                  <% if ["super_admin", "operation_admin"].include?(current_user.role) %>
                    [<%= notification.user.first_name %> <%= notification.user.last_name %>] <%= notification.message %>
                  <% else %>
                    <%= notification.message %>
                  <% end %>
                  
                </h3>
                <div class="flex items-center mt-2 space-x-4 text-sm text-gray-500 gap-4">
                  <span class="capitalize">
                    <i class="fas fa-tag mr-1"></i>
                    <%= notification.category %>
                  </span>
                  <span>
                    <i class="fas fa-clock mr-1"></i>
                    <%= time_ago_in_words(notification.created_at) %> ago
                  </span>
                </div>
              <% end %>
            </div>
            <div class="ml-4">
              <% if notification.status == 'unread' %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <i class="fas fa-circle mr-1 text-blue-600" style="font-size: 6px;"></i>
                  Unread
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                  <i class="fas fa-check mr-1"></i>
                  Read
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <i class="fas fa-bell-slash text-gray-400 text-4xl mb-4"></i>
      <p class="text-gray-500 text-lg">No notifications yet</p>
    </div>
  <% end %>
</div>
